@model MoneyTree.Models.ChangeAvatarViewModel
@{
    ViewBag.Title = "Change Avatar";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeAvatar", "Manage", FormMethod.Post, new { enctype = "Multipart/form-data" } ))
{
    @Html.AntiForgeryToken()
    <h4>Change your Avatar</h4>
    <hr />
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Avatar, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
        <input name="image" value="" type="hidden" class="form-control tapatar" id="fileUpload" />
        </div>
    </div>
   
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $('input.tapatar').tapatar({

    });
</script>
}